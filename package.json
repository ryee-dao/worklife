{
  "name": "worklife",
  "version": "1.0.0",
  "description": "Tool to reclaim back work-life balance",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run _dev:init && concurrently \"npm run _dev:vite\" \"npm run _dev:electron:watch\" \"npm run _dev:preload:watch\" \"npm run _dev:electron:start\"",
    "dev:debug": "npm run _dev:init && concurrently \"npm run _dev:vite\" \"npm run _dev:electron:watch\" \"npm run _dev:preload:watch\"",
    "build": "npm run _build:vite && npm run _build:electron && npm run _build:preload",
    "dist": "npm run build && electron-builder",
    "start": "npm run build && electron .",
    "_dev:init": "tsc --build tsconfig.main.json && node esbuild.preload.ts",
    "_dev:vite": "vite",
    "_dev:electron:watch": "tsc --build tsconfig.main.json -w",
    "_dev:preload:watch": "node esbuild.preload.ts --watch",
    "_dev:electron:start": "nodemon --watch dist/main --exec \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron . --no-sandbox\"",
    "_build:vite": "vite build",
    "_build:electron": "tsc --build tsconfig.main.json",
    "_build:preload": "node esbuild.preload.ts"
  },
  "build": {
    "appId": "com.worklife",
    "productName": "WorkLife",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "!dist/mac*",
      "!dist/win*",
      "!dist/linux*",
      "!dist/*.dmg",
      "!dist/*.zip",
      "!dist/*.exe",
      "!dist/*.AppImage",
      "!dist/*.deb",
      "!dist/*.blockmap",
      "!dist/*.yml",
      "!dist/*.yaml"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanNDao/worklife.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RyanNDao/worklife/issues"
  },
  "homepage": "https://github.com/RyanNDao/worklife#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.17",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.6",
    "sudo-prompt": "^9.2.1",
    "tailwindcss": "^4.1.17"
  }
}
